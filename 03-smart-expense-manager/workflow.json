      "parameters": {
        "jsCode": "// Generate Mock Receipt Text\nreturn [{\n  json: {\n    text: \"RECEIPT\\nVendor: Uber Rides\\nDate: 2023-10-28\\nAmount: $125.50\\nCategory: Travel\"\n  }\n}];"
      },
